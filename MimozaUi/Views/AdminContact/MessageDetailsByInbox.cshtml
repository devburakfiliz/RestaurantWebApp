@model ResultContactDto
@{
    ViewData["Title"] = "MessageDetailsByInbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}





    <div class="email-right-box">
        <div role="toolbar" class="toolbar">
            <div class="btn-group">
                <button aria-expanded="false" class="btn btn-dark" type="button">
                    Gelen Mesajlar <span class="caret m-l-5"></span>
                </button>

            </div>
        </div>


        <div class="read-content">
            <div class="media pt-5">
                <img class="mr-3 rounded-circle"style="height:80px;" src="https://cdn-icons-png.flaticon.com/512/219/219983.png">

                <div class="media-body">
                    <h5 class="m-b-3">@Model.FullName</h5>
                    <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
                    <p class="m-b-2">TEL: @Model.Phone</p>
                </div>

            </div>
            <hr>
            <div class="media mb-4 mt-1">
                <div class="media-body">
                    <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Kimden:@Model.Email</small>
                </div>
            </div>

            <p>
                @Model.Message
            </p>


            <hr>

        </div>

    </div>

